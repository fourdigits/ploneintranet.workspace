<html>
<body>
	<div id="sidebar-content">
		<div id="workspace-settings" tal:define="ws view/my_workspace">
		    <nav class="navigation tabs">
		        <a href="/open-market-committee/" class="pat-inject" data-pat-inject="target: #workspace-settings > .tabs-content; source: #workspace-settings > .tabs-content">General</a>
		        <a href="/feedback/workspace-settings-members.html" class="pat-inject current" data-pat-inject="target: #workspace-settings > .tabs-content; source: #workspace-settings > .tabs-content">Members</a>
		        <a href="/feedback/workspace-settings-security.html" class="pat-inject" data-pat-inject="target: #workspace-settings > .tabs-content; source: #workspace-settings > .tabs-content">Security</a>
		        <a href="/feedback/workspace-settings-advanced.html" class="pat-inject" data-pat-inject="target: #workspace-settings > .tabs-content; source: #workspace-settings > .tabs-content">Advanced</a>
		    </nav>
			<div class="tabs-content">
			    <form action="#" tal:attributes="action string:${ws/absolute_url}/@@sidebar.settings.advanced" method="post" class="pat-inject pat-autosubmit" data-pat-inject="target: #document-content::before; source: .sidebar-status-message">
			    	<fieldset class="vertical">
						<label>
							Workspace e-mail address
							<input type="email" value="" placeholder="Workspace E-mail Address" name="email" tal:attributes="value ws/email"  />
						</label>
					</fieldset>
			    </form>
			    <tal:messages define="status_messages view/status_messages" condition="status_messages" >
			    	<tal:block repeat="message status_messages">
			    <article id="my-feedback-message" tal:attributes="id message/id" class="sidebar-status-message">
			        <p id="my-feedback-message-body" class="pat-notification" data-pat-notification="type: banner" tal:attributes="id string:${message/id}-body; data-pat-notification string:${attrs/data-pat-notification};; class: ${message/type};; healing:600s" tal:content="message/message">
			            Something good happened
			        </p>
			    </article>
					</tal:block>
			    </tal:messages>
			</div>
		</div>
	</div>	
</body>
</html>