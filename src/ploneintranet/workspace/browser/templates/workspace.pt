<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            lang="en"
            metal:use-macro="context/main_template/macros/master"
            i18n:domain="ploneintranet.workspace">

    <body class="view-secure">
        <metal:content fill-slot="content" tal:define="workspace view/workspace">
            <h1 id="workspace-name">
                <!-- Next link is to lead to landing state of current workspace -->
                <a href="{{page.url}}" tal:attributes="href workspace/absolute_url" tal:content="workspace/Title">{{ page.workspace_name }}</a>
            </h1>

            <div class="ws-baggage-handling-regulations dark-theme" id="application-body">

                <div id="document-body">            
                    XXXBody
                    <!--div id="activity-stream" data-tile="./@@activitystream.tile?network=1" tal:attributes="data-tile string:${workspace/absolute_url}/@@activitystream.tile?network=1"></div-->
                </div>

                <aside class="sidebar left tagging-off" id="sidebar"> YYY My sidebar
                    <div id="sidebar-files-tile" data-tile="./@@sidebar.files.tile" tal:attributes="data-tile string:${workspace/absolute_url}/@@sidebar.files.tile"></div>
                </aside>

            </div>
            <link rel="tile" target="placeholder" href="./@@sample.tile/tile1?option1=value1" tal:attributes="href python:'/'+workspace.absolute_url(1)+'/@@workspace.tabs.tile'"/>
            <nav id="workspace-tabs" data-tile="./@@workspace.tabs.tile" tal:attributes="data-tile python:'/'+workspace.absolute_url(1)+'/@@workspace.tabs.tile'"></nav>

        </metal:content>
    </body>
</html>
